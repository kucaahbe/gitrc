# vim:ft=gitconfig

[color]
        ui = auto
[color "diff"]
	meta = white magenta bold
[core]
        excludesfile = ~/.gitignore
        pager=less -FXRS
        editor = gvim +0 -f
[alias]
        co=checkout
        s=status
        d=diff
        dw=diff --color-words
        dc=diff --cached
        log-stat=log --stat=160,300
        l=log --decorate=full
        gr=grep -n
[merge]
        tool=gvimdiff
[clean]
        requireForce = false
[push]
        default = tracking
[include]
        path = ~/.gitconfig.local
