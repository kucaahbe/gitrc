# vim:ft=gitconfig

[color]
        ui = auto
        grep = auto
[color "diff"]
	meta = white magenta bold
[color "grep"]
        filename   = magenta
        linenumber = green
        match      = red bold
[core]
        excludesfile = ~/.gitignore
        pager=less -FXRS
        editor = gvim +0 -f
[grep]
        lineNumber = true
[alias]
        co=checkout
        s=status
        d=diff
        dw=diff --color-words
        dc=diff --cached
        log-stat=log --stat=160,300
        l=log --decorate=full
        g=grep
        ack="grep --break --heading -A3 -B3"
[merge]
        tool=gvimdiff
[clean]
        requireForce = false
[push]
        default = tracking
[include]
        path = ~/.gitconfig.local
